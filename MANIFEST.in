# Include documentation and configuration files
include README.md
include DEVELOPMENT.md
include LICENSE
include CHANGELOG.md
include CODE_OF_CONDUCT.md
include CONTRIBUTING.md
include SECURITY.md
include pyproject.toml
include Makefile

# Include configuration files
recursive-include configs *.toml *.json *.yaml *.yml
include .pre-commit-config.yaml

# Include documentation
recursive-include docs *.md *.yml *.yaml
include mkdocs.yml

# Include examples
recursive-include examples *.py *.sh *.md

# Include scripts
recursive-include scripts *.sh *.py

# Include MCP components
recursive-include mcp *.py *.json *.md

# Include tools
recursive-include tools *.py

# Include type information
include src/pysearch/py.typed

# Exclude development and build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .ruff_cache
global-exclude .coverage
global-exclude htmlcov
global-exclude .benchmarks
global-exclude *.egg-info
global-exclude build
global-exclude dist
